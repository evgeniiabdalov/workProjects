<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="381.0" prefWidth="586.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test_task.MainGuiController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <VBox prefHeight="187.0" prefWidth="546.0">
         <children>
            <ButtonBar prefHeight="16.0" prefWidth="546.0">
              <buttons>
                <Button fx:id="showHistoryButton" mnemonicParsing="false" onAction="#showHistory" prefHeight="26.0" prefWidth="195.0" text="Show history" />
                  <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeLastPartExpression" prefHeight="26.0" text="Remove" />
                  <Button fx:id="removeAllButton" mnemonicParsing="false" onAction="#removeWholeExpression" text="Remove all" />
              </buttons>
            </ButtonBar>
            <TextArea fx:id="evaluationTextArea" editable="false" prefHeight="146.0" prefWidth="546.0" />
         </children>
      </VBox>
      <VBox prefHeight="139.0" prefWidth="546.0">
         <children>
            <HBox prefHeight="27.0" prefWidth="546.0">
               <children>
                  <Button fx:id="oneButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="119.0" text="1" userData="1" />
                  <Button fx:id="twoButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="119.0" text="2" userData="2" />
                  <Button fx:id="threeButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="119.0" text="3" userData="3" />
                  <Button fx:id="zeroButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="94.0" text="0" userData="0" />
                  <Button fx:id="pointButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="95.0" text="." userData="." />
               </children>
            </HBox>
            <HBox prefHeight="27.0" prefWidth="546.0">
               <children>
                  <Button fx:id="fourButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="119.0" text="4" userData="4" />
                  <Button fx:id="fiveButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="119.0" text="5" userData="5" />
                  <Button fx:id="sixButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="119.0" text="6" userData="6" />
                  <Button fx:id="sqrtButton" mnemonicParsing="false" onAction="#setSqrtOperationString" prefHeight="26.0" prefWidth="189.0" text="SQRT" userData="sqrt" />
               </children>
            </HBox>
            <HBox prefHeight="28.0" prefWidth="355.0">
               <children>
                  <Button fx:id="sevenButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="119.0" text="7" userData="7" />
                  <Button fx:id="eightButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="119.0" text="8" userData="8" />
                  <Button fx:id="nineButton" mnemonicParsing="false" onAction="#setValueString" prefHeight="26.0" prefWidth="119.0" text="9" userData="9" />
                  <Button fx:id="expButton" mnemonicParsing="false" onAction="#setOperationString" prefHeight="26.0" prefWidth="189.0" text="EXP" userData="exp" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="sumButton" mnemonicParsing="false" onAction="#setOperationString" prefHeight="26.0" prefWidth="119.0" text="+" userData="+" />
                  <Button fx:id="subtractButton" mnemonicParsing="false" onAction="#setOperationString" prefHeight="26.0" prefWidth="119.0" text="-" userData="-" />
                  <Button fx:id="multiplyButton" mnemonicParsing="false" onAction="#setOperationString" prefHeight="26.0" prefWidth="119.0" text="*" userData="*" />
                  <Button fx:id="divideButton" mnemonicParsing="false" onAction="#setOperationString" prefHeight="26.0" prefWidth="189.0" text="/" userData="/" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="getResultButton" mnemonicParsing="false" onAction="#getAssesmentResult" prefHeight="26.0" prefWidth="552.0" text="Get result" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
